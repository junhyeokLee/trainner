<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_nutrition_direction"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    >
    <LinearLayout
        android:id="@+id/layout_nutrition_direction"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        >
    <TextView
        android:id="@+id/tv_nutrition_direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_roboto_R2"
        android:textColor="#000000" />

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_nutrition_indicator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right|center"
    android:gravity="right|center"
    >

    <TextView
        android:id="@+id/tv_nutrition_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        style="@style/text_roboto_R2"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_nutirition_indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/iv_nutirition_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="right"
        android:background="@drawable/expand_item_up"
        android:contentDescription="Expand Indicator"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
