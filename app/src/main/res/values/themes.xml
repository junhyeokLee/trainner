<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Trainer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <style name="Theme.Trainer" parent="Base.Theme.Trainer">
    <item name="android:statusBarColor">@color/black</item>
    <item name="android:background">@color/background_color</item>
    <item name="android:icon">@mipmap/ic_launcher</item>
    <item name="android:roundIcon">@mipmap/ic_launcher_round</item>
    </style>

    <style name="Theme.Trainer.Fullscreen" parent="Theme.Trainer">
        <item name="android:actionBarStyle">@style/Widget.Theme.Trainer.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Trainer.FullscreenContainer" parent="">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <!-- Customize text field of the text input mode. -->
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>


</resources>