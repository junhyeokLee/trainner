<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="Widget.Theme.Trainer.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="Widget.Theme.Trainer.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/background_color</item>
    </style>

    <!--  ActionBar 스타일 -->
    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item> <!-- 원하는 배경색으로 설정 -->
        <item name="titleTextStyle">@style/title_text_noto_bold_16</item> <!-- 타이틀 텍스트 스타일 설정 -->
        <item name="android:textColor">@color/black</item>
    </style>


        <!-- 투명 다이얼로그 스타일 정의 -->
        <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="android:windowIsFloating">true</item>
            <item name="android:windowNoTitle">true</item>
        </style>


    <!-- bottomSheet 라운드처리 -->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>


    <style name="input_login_box_edit">
        <item name="android:background">@drawable/bg_login_edittext</item>
        <item name="android:textAppearance">@style/text_roboto_R1</item>
        <item name="android:textColorHint">@color/color_input_box_hint</item>
        <item name="android:paddingStart">@dimen/input_box_start_padding</item>
        <item name="android:paddingEnd">@dimen/input_box_end_padding</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="input_box_edit_nutrition_comment">
        <item name="android:background">@drawable/bg_edittext_nutrition_comment</item>
        <item name="android:textAppearance">@style/text_roboto_R2</item>
        <item name="android:textColor">@color/color_error_text</item>
        <item name="android:textColorHint">@color/color_input_box_hint</item>
    </style>

    <style name="input_box_edit">
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textAppearance">@style/text_roboto_R3</item>
        <item name="android:textColorHint">@color/color_input_box_hint</item>
        <item name="android:paddingStart">@dimen/input_box_start_padding</item>
        <item name="android:paddingEnd">@dimen/input_box_end_padding</item>
        <item name="android:gravity">center|left</item>
    </style>

    <style name="input_box_edit2">
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_edittext</item>
