    <style name="title_text_noto_bold_16" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/noto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="no_scroll_list_view_style">
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:clickable">false</item> <!-- 아이템 클릭 비활성화 -->
        <item name="android:focusable">false</item> <!-- 포커스 비활성화 -->
        <item name="tabRippleColor">@null</item>
        <item name="itemRippleColor">@null</item>
        <item name="android:groupIndicator">@null</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/primary</item>
    </style>
