<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id="@android:id/background">
    <shape>
        <corners android:radius="16dp"/>
        <solid android:color="@color/white" /> <!-- 바의 배경색 -->
    </shape>
</item>

<item android:id="@android:id/progress"
    android:top="1dp"
    android:bottom="1dp"
    android:left="1dp"
    android:right="1dp">

    <scale android:scaleWidth="100%">
        <shape>
            <gradient
                android:startColor="#84A8E9"
                android:endColor="#9878ED"
                android:angle="0" />
            <corners android:radius="16dp" /> <!-- 바의 모서리 둥글기 -->
        </shape>
    </scale>
</item>
</layer-list>