<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/bottom_nav_item_selected_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 선택된 상태 -->
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/bottom_navigation_selected_ripple_color" /> <!-- 원하는 배경 색상을 지정하세요. -->
            <corners android:radius="72dp" /> <!-- 원형 배경을 만들기 위한 반지름 설정 -->
        </shape>
    </item>
    <!-- 나머지 상태 (선택되지 않은 상태) -->
    <item android:state_checked="false">
        <color android:color="@android:color/transparent" /> <!-- 선택되지 않은 상태의 배경을 투명하게 설정 -->
    </item>
</selector>